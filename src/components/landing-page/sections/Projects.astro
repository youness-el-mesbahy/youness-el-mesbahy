---
import Container from "../../ui/Container.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import Card from "../../ui/Card.astro";
import {MoveRight} from "@lucide/astro";

import {getCollection} from "astro:content";
const projects = await getCollection("projects");
---

<section id="projects" class="py-16">
    <Container>
        <SectionHeader
                title="2.&nbsp;Projects"
                subtitle="Lorem IpsumÂ is simply dummy text of the printing and typesetting"
        />

        <div class="my-16 flex justify-center  items-stretch gap-12">
            {projects.map((project) => (
                    <Card project={project}/>
            ))}
        </div>
        <p class="flex items-center justify-center -mt-4">All Projects &nbsp;
            <MoveRight/>
        </p>
    </Container>
</section>




        </div>
    </div>
</Section>

<script>
    const copyBtn = document.getElementById('copy-email-contact');
    copyBtn?.addEventListener('click', async () => {
        try {
            await navigator.clipboard.writeText('younessmesbahy@gmail.com');
        } catch (e) {
        }
    });
</script>
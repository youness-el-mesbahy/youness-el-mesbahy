---
import Section from "../Section.astro";

import Badge from "../../ui/Badge.astro";
import JavaScript from "../../ui/icons/JavaScript.astro";
import {getCollection} from "astro:content";

const skills = await getCollection('skills')
---


<Section
        id="skills"
        title="4.&nbsp;Skills"
        subtitle="Lorem Ipsu is simply dummy text of the printing and typesetting"
>
    <div class="my-16 grid grid-cols-2 max-[553px]:grid-cols-1 gap-y-[3.5rem] px-32 max-[553px]:px-8  max-[1116px]:px-18">
        {
            skills.map((skill) => (
                    <>
                        <h3 class="text-xl font-semibold">{skill.data.category}</h3>
                        <div class="flex flex-wrap gap-4">
                            {skill.data.items.map((item) => (
                                    <Badge>
                                        <img src={item.icon} width="18" height="18"/>
                                        <span>{item.name}</span>
                                    </Badge>
                            ))}
                        </div>
                    </>
            ))
        }
    </div>
</Section>

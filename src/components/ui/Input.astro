---
const {label, placeholder, id} = Astro.props;
---

<div class="flex flex-col items-start gap-1">
    <label class="text-base font-semibold" for={id}>{label}</label>
    <input
            type="text"
            id={id}
            name="name"
            placeholder={placeholder}
            class="py-2 px-2 text-base text-carbon-400 border border-carbon-400 rounded-sm w-full"
    />
</div>
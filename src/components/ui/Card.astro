---
import {MoveRight} from "@lucide/astro";
import Badge from "./Badge.astro";

const {project}=Astro.props
const {title,description,technologies}=project.data;
---

<div class="relative w-[328px] py-4 px-5 rounded-lg border border-gray-200">
    <div class=" w-[288px] h-[162px] aspect-video bg-gray-500 rounded-lg">
    </div>
    <h3 class="text-lg mt-4">{title}</h3>
    <p class="text-sm mt-[6px] font-light">
        {description}
    </p>
    <div class="mt-3 space-x-2">
        {technologies.map((technology) => (
            <Badge size="small">
                <img src={technology.icon} width="14" height="14" class="inline-block" />
                <span>{technology.name}</span>
            </Badge>
        ))}
    </div>
    <div class="mt-2 invisible ">
        place
    </div>
    <div class=" absolute bottom-3 left-1/2 -translate-x-1/2">
        <MoveRight/>
    </div>
</div>

